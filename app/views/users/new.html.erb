<div class="jumbotron">
	<h1>Add new user</h1>
	<%= nested_form_for @user, html: { multipart: true }  do |f| %>
		<div class="form-group">
	    <label >First Name</label>
	 		<%= f.text_field :first_name , required: true, class: 'form-control'%>
 		</div>		
 		<div class="form-group">
	    <label >Last Name</label>
	 		<%= f.text_field :last_name , required: true, class: 'form-control'%>
 		</div>		
 		<div class="form-group">
	    <label >Email</label>
	 		<%= f.text_field :email , required: true, class: 'form-control'%>
 		</div> 		
 		<div class="form-group">
	    <label >Avatar</label>
  		<%= f.file_field :avatar, required: true, class: 'form-control' %>
 		</div>
 		<div class="form-group">
	    <label >Roles</label>
			<%= f.select(:role_ids, @roles.collect {|u| [u.name, u.id]}, {:prompt => 'Select'}, {:multiple => true, class: 'form-control'}) %>
		</div>
		<%= f.fields_for :user_meta do |task_form| %>
		  <div class="form-group">
		  	<label >Meta Key</label>
		  	<%= task_form.text_field :meta_key %>
		  </div>
  		  <div class="form-group">
		  	<label >Meta Value</label>
		  	<%= task_form.text_field :meta_value %>
		  </div>
		  <%= task_form.link_to_remove "Remove this task" %>
		<% end %>
		<p><%= f.link_to_add "Add a task", :user_meta %></p>
 		<div class='form-group'>
			<%= f.submit class: 'btn btn-primary'%>
		</div>
	<% end %>
</div>
<%= link_to "Show Users" , users_path, remote: true,  class: 'btn btn-primary'%>
<div class="jumbotron show-users hide">

</div>